<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mensaje_chat_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/fondo_mensaje_chat"
    android:padding="10dp"
    android:weightSum="10">

    <TextView
        android:id="@+id/texto_mensaje_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_mensaje_chat"
        android:layout_marginLeft="10dp"
        android:padding="0dp"
        android:text="Texto Chat"
        android:textColor="#444444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/nombre_mensaje_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:text="Nombre Usuario"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hora_mensaje_chat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nombre_mensaje_chat"
        android:layout_alignBottom="@+id/nombre_mensaje_chat"
        android:layout_alignParentEnd="true"
        android:text="00:00"
        android:textSize="12sp" />

</RelativeLayout>